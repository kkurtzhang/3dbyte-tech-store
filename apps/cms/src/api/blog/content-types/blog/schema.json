{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "meilisearch": {
      "indexName": "blog",
      "settings": {
        "searchableAttributes": ["Title", "Content", "Excerpt"],
        "filterableAttributes": ["Categories"],
        "sortableAttributes": ["Title"],
        "displayedAttributes": ["Title", "Slug", "Content", "Excerpt", "publishedAt"]
      }
    }
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "FeaturedImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "Categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post-category.blog-post-category"
    },
    "Excerpt": {
      "type": "text",
      "required": false
    }
  }
}
